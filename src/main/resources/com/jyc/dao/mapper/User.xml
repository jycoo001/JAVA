<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jyc.dao.UserDAO">

	<!-- 表示对AddressDAO接口的查询方法启用二级缓存，type属性用于指定缓存的实现类 -->
	<cache type="org.mybatis.caches.caffeine.CaffeineCache" />

	<!-- 配置了一个sql片段 -->
	<sql id="Columns">
		id,user_id,password,secret,sex,name,phone,qq,e_mail,card_id,creat_time,user_money,last_time,user_status,user_picture
	</sql>

	<!-- 配置查询结果集与对象之间的映射 -->
	<resultMap type="User" id="UserMap">
		<id property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="password" column="password" />
		<result property="phone" column="phone" />
		<result property="qq" column="qq" />
		<result property="eMail" column="e-mail" />
		<result property="cardId" column="card_id" />
		<result property="secret" column="secret" />
		<result property="sex" column="sex" />
		<result property="name" column="name" />
		<result property="creatTime" column="creat_time" />
		<result property="userMany" column="user_many" />
		<result property="lastTime" column="last_time" />
		<result property="userStatus" column="user_status" />
		<result property="userPicture" column="user_picture"/>
		<collection property="address" column="id" select="com.jyc.dao.UserAddressDAO.findByUserId"/>
	</resultMap>

	<select id="findAll" resultMap="UserMap" parameterType="User">
		select
		<include refid="Columns" />
		from t_user
		<where>
			<if test="id!=null and id!=''">
				and id=#{id}
			</if>
			<if test="userId!=null and userId!=''">
				and user_id=#{userId}
			</if>
			<if test="password!=null and password!=''">
				and password=#{password}
			</if>
			<if test="secret!=null and secret!=''">
				and secret=#{secret}
			</if>
			<if test="sex!=null and sex!=''">
				and sex=#{sex}
			</if>

			<if test="name!=null and name!=''">
				and name=#{name}
			</if>
			<if test="phone!=null and phone!=''">
				and phone=#{phone}
			</if>
			<if test="qq!=null and qq!=''">
				and qq=#{qq}
			</if>
			<if test="email!=null and email!=''">
				and e_mail=#{email}
			</if>
			<if test="cardId!=null and cardId!=''">
				and card_id=#{cardId}
			</if>
			<if test="loxalCreatTime!=null and localCreatTime!=''">
				and creat_time=#{localCreatTime}
			</if>
			<if test="userMoney!=null and userMoney!=''">
				and user_money=#{userMoney}
			</if>
			<!--last_time,user_status -->
			<if test="localLastTime!=null and localLastTime!=''">
				and last_time=#{localLastTime}
			</if>
			<if test="userStatus!=null and userStatus!=''">
				and user_status=#{userStatus}
			</if>
			<if test="userPicture!=null and userPicture!=''">
				and user_picture=#{userPicture}
			</if>
		</where>
		order by id
	</select>

	<select id="findById" resultMap="UserMap" parameterType="java.lang.Integer">
		select
		<include refid="Columns" />
		from t_user
		where id=#{id}
	</select>

	<select id="login" resultMap="UserMap" parameterType="User">
		select
		<include refid="Columns" />
		from t_user
		where user_id=#{userId} and password=#{localPassword}
	</select>

	<insert id="register" parameterType="User">
		insert into
		t_user(user_id,password,secret,sex,phone,qq,e_mail,card_id,creat_time,user_money,user_status)
		values(#{userId},#{password},#{secret},#{sex},#{phone},#{qq},#{email},#{cardId},#{creatTime},#{userMoney},#{userStatus})
	</insert>

	<update id="update" parameterType="User">
		update t_user
		<set>
			<if test="id!=null and id!=''">
				id=#{id},
			</if>
			<if test="userId!=null and userId!=''">
				user_id=#{userId},
			</if>
			<if test="password!=null and password!=''">
				password=#{password},
			</if>
			<if test="secret!=null and secret!=''">
				secret=#{secret},
			</if>
			<if test="sex!=null and sex!=''">
				sex=#{sex},
			</if>

			<if test="name!=null and name!=''">
				name=#{name},
			</if>
			<if test="phone!=null and phone!=''">
				phone=#{phone},
			</if>
			<if test="qq!=null and qq!=''">
				qq=#{qq},
			</if>
			<if test="email!=null and email!=''">
				e_mail=#{email},
			</if>
			<if test="cardId!=null and cardId!=''">
				card_id=#{cardId},
			</if>
			<if test="loxalCreatTime!=null and localCreatTime!=''">
				creat_time=#{localCreatTime},
			</if>
			<if test="userMoney!=null and userMoney!=''">
				user_money=#{userMoney},
			</if>
			<!--last_time,user_status -->
			<if test="localLastTime!=null and localLastTime!=''">
				last_time=#{localLastTime},
			</if>
			<if test="userStatus!=null and userStatus!=''">
				user_status=#{userStatus},
			</if>
			<if test="userPicture!=null and userPicture!=''">
				user_picture=#{userPicture}
			</if>
		</set>
		where id=#{id}
	</update>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from t_user where
		id=#{id}
	</delete>

	<delete id="deleteMany" parameterType="java.util.List">
		delete from t_user where id in
		<foreach collection="ids" item="id" separator="," open="("
			close=")">
			#{id}
		</foreach>
	</delete>

</mapper>